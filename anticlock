ORG 0H
MAIN:
MOV P2, #0F0H
ACALL COUNTERCLOCKWISE
ACALL DELAY
SJMP MAIN
UP:
MOV A, #08H
MOV P2, A
ACALL DELAY
MOV A, #04H
MOV P2, A
ACALL DELAY
MOV A, #02H
MOV P2, A
ACALL DELAY
MOV A, #01H
MOV P2, A
ACALL DELAY
SJMP UP
DELAY:
MOV R1, #0FFH
H1: MOV R2, #0FFH
H2: DJNZ R2, H2
DJNZ R1, H1
RET
COUNTERCLOCKWISE:
RET
END
